<footer
    style="position: relative; width: 100%; overflow: hidden; background-color: #f0f8ff;">

    <div
        style="position: absolute; bottom: 0; width: 100%; height: 200px; overflow: hidden; line-height: 0;">
        <svg viewBox="0 0 1200 200" preserveAspectRatio="none"
            style="height: 100%; width: 100%; display: block;">
            <!-- Wave 1 -->
            <path d="M0,100 C300,200 900,0 1200,100 L1200,200 L0,200 Z"
                fill="#1e90ff" opacity="0.6">
                <animate attributeName="d" dur="8s" repeatCount="indefinite"
                    values="
                   M0,100 C300,200 900,0 1200,100 L1200,200 L0,200 Z;
                   M0,110 C300,190 900,10 1200,90 L1200,200 L0,200 Z;
                   M0,100 C300,200 900,0 1200,100 L1200,200 L0,200 Z" />
            </path>

            <!-- Wave 2 -->
            <path d="M0,110 C300,190 900,10 1200,90 L1200,200 L0,200 Z"
                fill="#1e90ff" opacity="0.4">
                <animate attributeName="d" dur="10s" repeatCount="indefinite"
                    values="
                   M0,110 C300,190 900,10 1200,90 L1200,200 L0,200 Z;
                   M0,120 C300,180 900,20 1200,80 L1200,200 L0,200 Z;
                   M0,110 C300,190 900,10 1200,90 L1200,200 L0,200 Z" />
            </path>

            <!-- Wave 3 -->
            <path d="M0,120 C300,180 900,20 1200,80 L1200,200 L0,200 Z"
                fill="#1e90ff" opacity="0.2">
                <animate attributeName="d" dur="12s" repeatCount="indefinite"
                    values="
                   M0,120 C300,180 900,20 1200,80 L1200,200 L0,200 Z;
                   M0,130 C300,170 900,30 1200,70 L1200,200 L0,200 Z;
                   M0,120 C300,180 900,20 1200,80 L1200,200 L0,200 Z" />
            </path>
        </svg>
    </div>

    <div
        style="padding: 60px 0 40px; text-align: center; position: relative; z-index: 2;">
        <p style="margin: 0; color: #333;">&copy; <%= new Date().getFullYear()
            %> Your Company. All rights reserved.</p>
    </div>

</footer>
