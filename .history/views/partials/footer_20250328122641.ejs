<footer class="footer">
    <div class="wave-container">
        <svg viewBox="0 0 1200 200" preserveAspectRatio="none" class="wave-svg">
            <!-- Wave 1 -->
            <path class="wave wave-1"
                d="M0,100 C300,200 900,0 1200,100 L1200,200 L0,200 Z">
                <animate attributeName="d" dur="8s" repeatCount="indefinite"
                    values="
                   M0,100 C300,200 900,0 1200,100 L1200,200 L0,200 Z;
                   M0,110 C300,190 900,10 1200,90 L1200,200 L0,200 Z;
                   M0,100 C300,200 900,0 1200,100 L1200,200 L0,200 Z" />
            </path>

            <!-- Wave 2 -->
            <path class="wave wave-2"
                d="M0,110 C300,190 900,10 1200,90 L1200,200 L0,200 Z">
                <animate attributeName="d" dur="10s" repeatCount="indefinite"
                    values="
                   M0,110 C300,190 900,10 1200,90 L1200,200 L0,200 Z;
                   M0,120 C300,180 900,20 1200,80 L1200,200 L0,200 Z;
                   M0,110 C300,190 900,10 1200,90 L1200,200 L0,200 Z" />
            </path>

            <!-- Wave 3 -->
            <path class="wave wave-3"
                d="M0,120 C300,180 900,20 1200,80 L1200,200 L0,200 Z">
                <animate attributeName="d" dur="12s" repeatCount="indefinite"
                    values="
                   M0,120 C300,180 900,20 1200,80 L1200,200 L0,200 Z;
                   M0,130 C300,170 900,30 1200,70 L1200,200 L0,200 Z;
                   M0,120 C300,180 900,20 1200,80 L1200,200 L0,200 Z" />
            </path>
        </svg>
    </div>

    <div class="footer-content">
        <p>&copy; <%= new Date().getFullYear() %> spooker24. All rights
            reserved.</p>
    </div>
</footer>
