<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Document</title>
    </head>
    <body>
        <%- include("partials/header.ejs") %>

        <div class="hero-image">
            <div class="hero-text">
                <h1>Welcome to Post Blog Website not made by WP ðŸ˜…</h1>
                <h1>I am Hasan Qarqur</h1>
                <p>And I'm a Developer</p>
                <button class="btn btn-primary">Hire me</button>
            </div>
        </div>
        <br><br><br>
        <!-- the form -->
                <div class="container">
                    <div class="card">
                        <h2>Post Something</h2>
                        <form id="postForm" method="POST" action="/create">
                            <textarea name="content" id="postInput"
                                placeholder="What's on your mind?"
                                required></textarea>
                            <button type="submit">Post</button>
                        </form>
                    </div>

                    <div class="card">
                        <h2>All Posts</h2>
                        <%# if (posts.length === 0) { %>
                        <p>No posts yet.</p>
                        <%# } else { %>
                        <%# posts.forEach((post, index) => { %>
                        <div class="post">
                            <p><%#= post.content %></p>
                            <div class="actions">
                                <form method="POST"
                                    action="/edit/<%#= post._id %>"
                                    class="inline-form">
                                    <input type="text" name="content"
                                        value="<%#= post.content %>" required>
                                    <button type="submit">Update</button>
                                </form>
                                <form method="POST"
                                    action="/delete/<%#= post._id %>"
                                    class="inline-form">
                                    <button type="submit"
                                        class="delete">Delete</button>
                                </form>
                            </div>
                        </div>
                        <%# }); %>
                        <%# } %>
                    </div>
                </div>
            </body>
        </html>

        <div>
            <%- include("partials/footer.ejs") %>
        </div>

    </body>
</html>